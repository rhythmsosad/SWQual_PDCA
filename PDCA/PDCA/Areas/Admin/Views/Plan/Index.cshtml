
@{
    ViewBag.Title = "Plan";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Plan</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active">
                <strong>Plan</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Your plans</h5>
                </div>
                <div class="ibox-content">
                    <div class="pull-right">
                        <a onclick="fnClickAddRow();" href="javascript:void(0);" class="btn btn-primary ">Create Plan</a>
                    </div>
                    <br style="clear:both" />
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Plan Name</th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="">
                                <td>1</td>
                                <td>
                                    Plan 1
                                </td>
                                <td><a href="javascript:void(0);" class="btn btn-primary "><i class="fa fa-edit"></i> </a></td>
                            </tr>
                            <tr class="">
                                <td>2</td>
                                <td>
                                    Plan 2
                                </td>
                                <td><a href="javascript:void(0);" class="btn btn-primary "><i class="fa fa-edit"></i> </a></td>
                            </tr>
                            <tr class="">
                                <td>3</td>
                                <td>
                                    Plan 3
                                </td>
                                <td><a href="javascript:void(0);" class="btn btn-primary "><i class="fa fa-edit"></i> </a></td>
                            </tr>
                            <tr class="">
                                <td>4</td>
                                <td>
                                    Plan 4
                                </td>
                                <td><a href="javascript:void(0);" class="btn btn-primary "><i class="fa fa-edit"></i> </a></td>
                            </tr>
                            <tr class="">
                                <td>5</td>
                                <td>
                                    Plan 5
                                </td>
                                <td><a href="javascript:void(0);" class="btn btn-primary "><i class="fa fa-edit"></i> </a></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Plan Name</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').dataTable({
                //"dom": 'T<"clear">lfrtip',
                //"tableTools": {
                //    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                //}
                responsive: true
            });

        });

        function fnClickAddRow() {
            $('#editable').dataTable().fnAddData( [
                "Custom row",
                "New row",
                "New row",
                "New row",
                "New row" ] );

        }
    </script>
}